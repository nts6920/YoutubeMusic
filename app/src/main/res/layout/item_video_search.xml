<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/padding18dp"
        android:paddingRight="@dimen/padding18dp"
        tools:ignore="UnusedAttribute">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_thumbnails"
            android:layout_width="@dimen/img_157dp"
            android:layout_height="@dimen/img_92dp"
            android:layout_marginTop="@dimen/margin9dp"
            android:layout_marginBottom="@dimen/margin9dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin12dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_thumbnails"
            app:layout_constraintTop_toTopOf="@+id/img_thumbnails" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_channel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin4dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/text_12sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_title"
            app:layout_constraintStart_toStartOf="@+id/txt_title"
            app:layout_constraintTop_toBottomOf="@+id/txt_title" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin4dp"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/text_12sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_channel"
            app:layout_constraintStart_toStartOf="@+id/txt_channel"
            app:layout_constraintTop_toBottomOf="@+id/txt_channel" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin10dp"
            android:background="@android:color/black"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14sp"
            android:fontFamily="sans-serif"
            app:layout_constraintBottom_toBottomOf="@+id/img_thumbnails"
            app:layout_constraintEnd_toEndOf="@+id/img_thumbnails"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>